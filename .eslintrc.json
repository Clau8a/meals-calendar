{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          2,
          {
              "SwitchCase": 1
          }
      ],
      "semi": ["error", "always"],
      "no-unused-vars": "error",
      "eqeqeq": ["error", "always"],
      "no-nested-ternary": "error",
      "no-else-return": "error",
      "comma-style": ["error", "last"],
  }
}